@model BankingEx.Models.Employee

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @{
            string s = "";

            if (ViewBag.EmployeeData != null)
            {
                s = $"Employee with user name '{ViewBag.EmployeeData.UserName}' not found";
            }
        }
        <div class="form-group">
            <lable>@s</lable>
        </div>
        <div class="form-group">
            <lable>@ViewBag.ErroMessage</lable>
        </div>
    </div>
</div>
<div class="row">

    <div class="col-md-4">
        <form action="/employee/login" method="post">
            <div class="form-group">
                <label name="UserName" class="control-label">User Name: </label>
                <input name="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label name="Password" class="control-label">Password: </label>
                <input name="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

